// Show Utility
// ============================================================

.u-show {
  display: block !important;
  &-m {
    @media @mobile {
      display: block !important;
    }
  }
  &-ml {
    @media @mobile-ls {
      display: block !important;
    }
  }
  &-t {
    @media @tablet {
      display: block !important;
    }
  }
  &-d {
    @media @desktop {
      display: block !important;
    }
  }
  &-v {
    @media @tv {
      display: block !important;
    }
  }
}
